set(CMAKE_SYSTEM_NAME Windows)
set(CMAKE_SYSTEM_PROCESSOR x86_64)

set(LLVM_MINGW_ROOT "$ENV{LLVM_MINGW_ROOT}")
if(NOT LLVM_MINGW_ROOT)
  message(FATAL_ERROR "LLVM_MINGW_ROOT is not set")
endif()

set(CMAKE_C_COMPILER x86_64-w64-mingw32-clang)
set(CMAKE_CXX_COMPILER x86_64-w64-mingw32-clang++)
set(CMAKE_RC_COMPILER x86_64-w64-mingw32-windres)
set(CMAKE_AR x86_64-w64-mingw32-ar)
set(CMAKE_RANLIB x86_64-w64-mingw32-ranlib)
set(CMAKE_C_COMPILER_AR x86_64-w64-mingw32-ar)
set(CMAKE_CXX_COMPILER_AR x86_64-w64-mingw32-ar)
set(CMAKE_ASM_COMPILER_AR x86_64-w64-mingw32-ar)
set(CMAKE_C_COMPILER_RANLIB x86_64-w64-mingw32-ranlib)
set(CMAKE_CXX_COMPILER_RANLIB x86_64-w64-mingw32-ranlib)
set(CMAKE_ASM_COMPILER_RANLIB x86_64-w64-mingw32-ranlib)

set(CMAKE_FIND_ROOT_PATH "${LLVM_MINGW_ROOT}/x86_64-w64-mingw32")
set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY)
